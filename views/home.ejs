<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GradNet - Home</title>
    <link rel="stylesheet" href="../public/css/home.css">
</head>
<body>
    <div class="main-container">

        <%- include('partials/_sidebar', { user: user }) %>

        <main class="main-content"> 
            <div class="content-wrapper"> 
                <header class="content-header"> 
                    <h1>Home</h1>
                </header>
                
                <%- include('partials/_postCreate', { user: user }) %>

                <div class="feed">
                    <% if (events && events.length > 0) { %>
                        <% events.forEach(event => { %>
                            <%- include('partials/_post', { event: event }) %>
                        <% }) %>
                    <% } else { %>
                        <p>No events to display in your feed.</p>
                    <% } %>
                </div>
            </div>
        </main>
        
        <aside class="right-sidebar"> 
            <div class="search-section"> 
                <div class="search-container"> 
                    <input type="text" placeholder="Search GradNet" class="search-input">
                    <span class="search-icon">üîç</span> 
                </div>
            </div>
        </aside>
    </div>
</body>
</html>